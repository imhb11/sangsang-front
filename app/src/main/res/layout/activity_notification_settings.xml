<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Global Notification Switch -->
    <Switch
        android:id="@+id/switch_global_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable All Notifications"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

    <!-- Comment Notification Switch -->
    <Switch
        android:id="@+id/switch_comment_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment Notifications"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

    <!-- Chat Room Notification Switch -->
    <Switch
        android:id="@+id/switch_chat_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Room Notifications"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

    <!-- Like Notification Switch -->
    <Switch
        android:id="@+id/switch_like_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like Notifications"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

</LinearLayout>

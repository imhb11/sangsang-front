<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="소속 커뮤니티 확인"
        android:textColor="#D7C2A4"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 작성한 게시글 확인 -->
    <Button
        android:id="@+id/button_view_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작성한 게시글 확인"
        android:backgroundTint="#D7C2A4"
        android:layout_marginBottom="16dp" />

    <!-- 작성한 댓글 확인 -->
    <Button
        android:id="@+id/button_view_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="작성한 댓글 확인"
        android:backgroundTint="#D7C2A4"
        android:layout_marginBottom="16dp" />

    <!-- 공감한 게시글 확인 -->
    <Button
        android:id="@+id/button_view_liked_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공감한 게시글 확인"
        android:backgroundTint="#D7C2A4"
        android:layout_marginBottom="16dp" />

    <!-- 참여하는 채팅방 확인 -->
    <Button
        android:id="@+id/button_view_chat_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="참여하는 채팅방 확인"
        android:backgroundTint="#D7C2A4"
        android:layout_marginBottom="16dp" />
</LinearLayout>
